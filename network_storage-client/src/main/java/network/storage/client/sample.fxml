<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenebuilder--stylesheet /css/Styles.css?>

<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.control.ListView?>
<VBox fx:id="boxArea" fx:controller="network.storage.client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox fx:id="upperPanel">

        <VBox HBox.hgrow="ALWAYS" >
            <TextField fx:id="loginField" promptText="Логин"  />
            <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="Пароль" />
            <Button onAction="#tryToAuth" text="Авторизоваться" prefWidth="200" />
        </VBox>

        <VBox HBox.hgrow="ALWAYS" prefWidth="200"></VBox>

        <VBox HBox.hgrow="ALWAYS">
            <TextField fx:id="signupLoginField" promptText="Логин"/>
            <PasswordField fx:id="signupPasswordField" promptText="Пароль" />
            <TextField fx:id="signupNickField" promptText="Ник"/>
            <Button onAction="#tryToSignup" text="Зарегистрироваться" prefWidth="200"/>
        </VBox>

    </HBox>


    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
            <VBox fx:id="bottomPanel" managed="false" visible="false">
                <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите сообщение..." />
                <Button fx:id="btn1" text="send"/>
                <Button  text="send file to server" onAction="#sendFileToServer"/>
                <Button  text="download to client" onAction="#sendMsg"/>
                <Button  text="delete remote file" onAction="#sendMsg"/>
                <Button  text="delete local file" onAction="#sendMsg"/>
                <Button  text="rename remote file" onAction="#sendMsg"/>
                <Button  text="rename local file" onAction="#sendMsg"/>

            </VBox>
        </VBox>
        <ListView fx:id="clientsList" managed="false" prefWidth="300" />
        <ListView fx:id="clientsBlockList" managed="false"  prefWidth="300" />

    </HBox>


</VBox>
